@model ContatoModel
@{
    ViewData["Title"] = "Apagar contato";
}
<div class="text-center">
    <h3 class="display-3">Realmente deseja apagar o (@Model.Nome)?</h3>
</div>

<br />


<div class="d-grid gap-2">
    <a class="btn btn-secondary" asp-route-id="@Model.Id" asp-controller="Contatos" asp-action="Apagar">Confirmar deleção</a>
    
    <a class="btn btn-danger" asp-controller="Contatos" asp-action="Index">Cancelar deleção</a>
</div>